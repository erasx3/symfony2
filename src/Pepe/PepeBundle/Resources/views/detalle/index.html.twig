{% extends '::base.html.twig' %}

{% block body -%}
{{ parent()}}
    <h1>Lista de Detalles</h1>

    <table class="table table-list table-hover records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cantidad</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('detalle_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.cantidad }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('detalle_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('detalle_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('detalle_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
